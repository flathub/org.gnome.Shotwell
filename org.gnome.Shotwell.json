            "name": "libheif",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DWITH_LIBDE265=On",
                "-DWITH_DAV1D=Off",
                "-DWITH_AOM_ENCODER=Off",
                "-DWITH_AOM_DECODER=Off",
                "-DWITH_SvtEnc=Off",
                "-DWITH_RAV1E=Off",
                "-DENABLE_PLUGIN_LOADING=On",
                "-DWITH_EXAMPLES=Off"
            ],
            "sources": [
