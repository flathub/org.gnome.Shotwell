            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_DECODER=Off",
                "-DENABLE_ENCODER=OfF"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "anitya",
